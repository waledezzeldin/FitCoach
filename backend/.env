########################################
# FitCoach Backend Environment Template #
########################################

# Core runtime
NODE_ENV=development
PORT=3000
API_VERSION=v2
FRONTEND_URL=http://localhost:3000
SOCKET_CORS_ORIGIN=*

# Feature bypass flags (development only)
# Values:
# - false: real third-party integration is used
# - true: bypass external provider call and return mocked success to keep app flow moving
BYPASS_TWILIO=false
BYPASS_STRIPE=false
BYPASS_TAP=false
BYPASS_S3=false
BYPASS_AGORA=false
BYPASS_SMTP=false
BYPASS_SOCIAL_AUTH=false
BYPASS_FIREBASE=false

# Security (required)
JWT_SECRET=replace-with-a-strong-random-secret
JWT_EXPIRES_IN=30d

# Database (required)
DB_HOST=localhost
DB_PORT=5433
DB_NAME=fitcoach_test
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MAX=20
DB_POOL_MIN=5

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/combined.log

# Rate limiting / uploads
RATE_LIMIT_MAX_REQUESTS=100
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime

# Twilio (required by current boot path: must be non-empty)
# In development, OTP SMS is not sent unless NODE_ENV=production.
TWILIO_ACCOUNT_SID=AC123456789012345678901234567890
TWILIO_AUTH_TOKEN=test_auth_token
TWILIO_PHONE_NUMBER=+15005550006

# Social login providers (required only if testing social auth)
GOOGLE_CLIENT_ID=
APPLE_CLIENT_ID=
APPLE_SERVICE_ID=

# Payments (required only if testing payments/subscriptions checkout)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
TAP_SECRET_KEY=
TAP_WEBHOOK_SECRET=

# AWS S3 (required only if testing profile photo/file upload)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=me-south-1
AWS_S3_BUCKET=fitcoach-uploads

# Firebase push (optional; notifications disabled if not configured)
FIREBASE_SERVICE_ACCOUNT=
FIREBASE_SERVICE_ACCOUNT_PATH=

# Agora video calls (required only if testing video call flow)
AGORA_APP_ID=
AGORA_APP_CERTIFICATE=

# SMTP email (required only if testing email features/invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# InBody simulated AI extraction gate
ENABLE_SIMULATED_AI_EXTRACTION=true
AI_EXTRACTION_DELAY_MS=1200
